{
    "extends": ["airbnb"],
    "plugins": ["react", "react-hooks"],
    "parser": "babel-eslint",
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", "jsx"]
            }
        ],
        "react/jsx-indent": 0,
        "indent": 0,
        "no-tabs": 0,
        "react/jsx-indent-props": 0,
		"no-unused-vars": 1,
		"semi": [2, "never"],
		"react/prop-types": 0,
		"react-hooks/rules-of-hooks": "error"
    },
    "env": {
        "browser": true
    }
}
